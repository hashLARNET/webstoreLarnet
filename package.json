{
  "name": "mi-proyecto-web",
  "version": "1.0.0",
  "description": "Proyecto web con estructura profesional JavaScript y CSS",
  "main": "src/js/main.js",
  "scripts": {
    "start": "live-server public --port=3000",
    "dev": "live-server public --port=3000 --watch=src",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss src/css/main.css -o dist/css/main.min.css",
    "build:js": "webpack --mode=production",
    "test": "jest",
    "lint": "eslint src/js/**/*.js"
  },
  "keywords": ["javascript", "css", "html", "frontend", "web"],
  "author": "Tu Nombre",
  "license": "MIT",
  "devDependencies": {
    "live-server": "^1.2.2",
    "jest": "^29.0.0",
    "eslint": "^8.0.0"
  },
  "dependencies": {}
}